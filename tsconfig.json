{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "removeComments": false,
    "allowJs": true,
    "jsx": "react-native",
    "noEmit": false,
    "isolatedModules": true,
    "strict": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["./components/*"],
      "@modules/*": ["./modules/*"],
      "@constants/*": ["./constants/*"],
      "@utils/*": ["./utils/*"],
      "@types/*": ["./types/*"],
      "@themes/*": ["./themes/*"]
    }
  },
  "include": ["src/**/*", "index.ts"],
  "exclude": ["node_modules/**/*", "babel.config.js", "metro.config.js", "jest.config.js", "dist"]
}
